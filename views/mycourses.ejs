<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Courses</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    
</head>
<body class="bg-gray-100">

    <div class="container mx-auto py-8">
        <h1 class="text-3xl text-gray-900 font-semibold mb-4">My Courses</h1>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <% courses.forEach(course => { %>
            <div class="bg-white p-6 rounded-lg shadow-md cursor-pointer" onclick="redirectToCourse('<%= course.name %>')">
                <h2 class="text-xl text-gray-900 font-semibold mb-2"><%= course.name %></h2>
                <p class="text-gray-700 mb-4">Registered Users Count: <%= course.registeredUsersCount %></p>
                <p class="text-gray-700">Number of Chapters: <%= course.chapters.length %></p>
            </div>
            <% }); %>
        </div>
    </div>

    <script>
        function redirectToCourse(courseName) {
            window.location.href = `/viewCourse?courseName=${encodeURIComponent(courseName)}`;
        }
    </script>

</body>
</html>
