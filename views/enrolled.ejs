<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Enrolled Courses</title>
    <!-- Include Tailwind CSS -->
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>

<body class="bg-gray-100 min-h-screen flex items-center justify-center">
    <div class="max-w-lg w-full bg-white p-8 rounded-lg shadow-md">
        <h1 class="text-3xl font-semibold mb-6">Enrolled Courses</h1>
        <div>
            <% if (courses && courses.length> 0) { %>
                <% courses.forEach(course=> { %>
                    <div class="bg-white p-6 rounded-lg shadow-md cursor-pointer transition duration-300 ease-in-out transform hover:scale-105 mb-4"
                        onclick="window.location.href='/viewCourseU?courseName=<%= encodeURIComponent(course.name) %>&courseId=<%= course.id %>'">
                        <h2 class="text-xl text-gray-900 font-semibold mb-2">
                            <%= course.name %>
                        </h2>
                        <p class="text-gray-700 mb-2">Registered Users Count: <%= course.registeredUsersCount %>
                        </p>
                        <p class="text-gray-700">Number of Chapters: <%= course.chapters.length %>
                        </p>
                    </div>
                    <% }); %>
                        <% } else { %>
                            <p class="text-lg font-semibold text-gray-700">No courses available</p>
                            <% } %>
        </div>
    </div>
</body>

</html>